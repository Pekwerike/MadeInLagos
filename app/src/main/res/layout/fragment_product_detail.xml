<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.pekwerike.madeinlagos.model.Product" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.fragment.ProductDetailFragment">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_product_detail_product_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fragment_product_detail_product_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:lines="1"
                android:text="@{product.name}"
                android:padding="@dimen/textview_standard_padding"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fragment_product_detail_product_price_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:lines="1"
                setProductPrice="@{product.price}"
                setProductCurrency="@{product.currency}"
                android:padding="@dimen/textview_standard_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fragment_product_detail_product_description_header_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                android:padding="@dimen/textview_standard_padding"
                android:text="@string/description_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fragment_product_detail_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{product.description}"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_product_detail_product_reviews_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</layout>