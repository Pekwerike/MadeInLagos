<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.pekwerike.madeinlagos.model.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_product_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:contentDescription="@string/arrow_back"
        android:orientation="vertical"
        android:transitionName="@string/game_one"
        tools:context=".ui.fragment.ProductDetailFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_product_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="Details" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/product_detail_swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_product_details_toolbar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/product_detail_product_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/standard_margin" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/product_detail_product_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/standard_margin"
                        android:lines="1"
                        android:padding="@dimen/textview_standard_padding"
                        android:text="@{product.name}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/product_detail_product_price_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/standard_margin"
                        android:lines="1"
                        android:padding="@dimen/textview_standard_padding"
                        android:text="@{product.productPriceWithCurrency}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/product_detail_product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/standard_margin"
                        android:layout_marginVertical="4dp"
                        android:padding="@dimen/textview_standard_padding"
                        android:text="@{product.description}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_detail_product_reviews_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/standard_margin"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/product_review_item_layout" />

                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/product_detail_post_product_review_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="28dp"
            android:contentDescription="@string/write_product_review_label"
            android:src="@drawable/ic_baseline_edit_24"
            android:transitionName="@string/post_product_review_transition_element"
            app:backgroundTint="@color/half_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/on_background_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>